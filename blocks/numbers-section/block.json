{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "main/numbers-section",
  "title": "Numbers Section",
  "category": "main",
  "icon": "chart-bar",
  "description": "Display statistics and numbers with gradient styling",
  "keywords": ["stats", "numbers", "statistics", "metrics"],
  "textdomain": "main",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "render": "file:./render.php",
  "attributes": {
    "heading": {
      "type": "string",
      "default": "Empowering businesses like yours since 2015"
    },
    "description": {
      "type": "string",
      "default": "String"
    },
    "stats": {
      "type": "array",
      "default": [
        {
          "number": "500K+",
          "label": "Businesses Helped"
        },
        {
          "number": "2,000+",
          "label": "Guides Published"
        },
        {
          "number": "9+",
          "label": "Years of Expertise"
        }
      ]
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  }
}
