{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "main/articles-section",
  "title": "Articles Section",
  "category": "main",
  "icon": "admin-post",
  "description": "Display posts from selected categories in a grid layout with heading, subheading, and customizable button.",
  "keywords": ["articles", "posts", "categories", "grid"],
  "textdomain": "main",
  "editorScript": "file:./editor.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "render": "file:./render.php",
  "attributes": {
    "heading": {
      "type": "string",
      "default": "Most popular guides"
    },
    "subheading": {
      "type": "string",
      "default": "Trusted by thousands of businesses worldwide"
    },
    "categories": {
      "type": "array",
      "default": []
    },
    "postLimit": {
      "type": "number",
      "default": 6
    },
    "buttonText": {
      "type": "string",
      "default": "Read More Articles"
    },
    "buttonLinkType": {
      "type": "string",
      "default": "custom"
    },
    "buttonLinkId": {
      "type": "string",
      "default": ""
    },
    "buttonCustomUrl": {
      "type": "string",
      "default": "#"
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  }
}
