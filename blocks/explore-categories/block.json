{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "main/explore-categories",
  "title": "Explore Categories",
  "category": "main",
  "icon": "category",
  "description": "Display category links with icons and descriptions",
  "keywords": ["categories", "explore", "links", "homepage"],
  "textdomain": "main",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "render": "file:./render.php",
  "attributes": {
    "heading": {
      "type": "string",
      "default": "Explore guides by category"
    },
    "categories": {
      "type": "array",
      "default": []
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  }
}
