{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "main/score-breakdown",
  "title": "Score Breakdown",
  "category": "main",
  "icon": "star-half",
  "description": "Display detailed rating breakdown with visual bars",
  "keywords": ["rating", "score", "review"],
  "textdomain": "main",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "render": "file:./render.php",
  "attributes": {
    "productId": {
      "type": "number",
      "default": 0
    },
    "heading": {
      "type": "string",
      "default": "Product Score Breakdown"
    }
  },
  "supports": {
    "html": false
  }
}
