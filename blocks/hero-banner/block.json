{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "main/hero-banner",
  "title": "Hero Banner",
  "category": "main",
  "icon": "cover-image",
  "description": "A customizable hero banner with search form and suggestions",
  "keywords": ["hero", "banner", "search", "homepage"],
  "textdomain": "main",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "viewScript": "file:./view.js",
  "render": "file:./render.php",
  "attributes": {
    "heading": {
      "type": "string",
      "default": "The Definitive Software Buying Guides"
    },
    "description": {
      "type": "string",
      "default": "Cut through the noise with expert-written guides to choose the perfect tools for your business."
    },
    "heroImage": {
      "type": "object",
      "default": null
    },
    "heroVideoWebm": {
      "type": "string",
      "default": "https://cdn.geekflare.com/general/gia-standby.webm"
    },
    "heroVideoMp4": {
      "type": "string",
      "default": "https://cdn.geekflare.com/general/gia-standby.mp4"
    },
    "searchSuggestions": {
      "type": "array",
      "default": [
        "Best CRM for small teams",
        "Compare project management tools",
        "Top cybersecurity solutions",
        "AI tools for business automation"
      ]
    },
    "searchPlaceholder": {
      "type": "string",
      "default": "Enter keyword"
    },
    "searchButtonText": {
      "type": "string",
      "default": "Search Guides"
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  }
}
