{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "main/info-box",
  "title": "Info Box",
  "category": "main",
  "icon": "info",
  "description": "Styled information box with icon, heading, and content",
  "keywords": ["info", "callout", "notice", "box"],
  "textdomain": "main",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "viewScript": "file:./view.js",
  "render": "file:./render.php",
  "attributes": {
    "style": {
      "type": "string",
      "default": "default"
    },
    "iconType": {
      "type": "string",
      "default": "none"
    },
    "iconId": {
      "type": "number",
      "default": 0
    },
    "iconUrl": {
      "type": "string",
      "default": ""
    },
    "heading": {
      "type": "string",
      "default": ""
    },
    "content": {
      "type": "string",
      "default": ""
    }
  },
  "supports": {
    "html": false
  }
}
