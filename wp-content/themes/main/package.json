{
  "name": "main-theme",
  "version": "1.0.0",
  "description": "WordPress theme built with Gutenberg and Tailwind CSS",
  "scripts": {
    "build:sidebar": "esbuild ./src/js/editor/sidebar-settings.js --bundle --format=iife --outfile=./dist/sidebar-settings.js --minify --platform=browser --external:@wordpress/*",
    "watch:sidebar": "esbuild ./src/js/editor/sidebar-settings.js --bundle --format=iife --outfile=./dist/sidebar-settings.js --watch --platform=browser --external:@wordpress/*",
    "dev": "npm run watch:css & npm run watch:js & npm run watch:editor & npm run watch:sidebar",
    "build": "npm run build:css && npm run build:js && npm run build:editor && npm run build:sidebar && npm run build:flickity-css && npm run build:flickity-js && npm run build:flatpickr-css && npm run build:flatpickr-js && npm run build:photoswipe-css",
    "build:css": "tailwindcss -i ./src/css/style.css -o ./dist/style.css --minify",
    "build:js": "esbuild ./src/js/main.js --bundle --format=iife --global-name=MainTheme --outfile=./dist/script.js --minify --platform=browser",
    "build:flickity-css": "cp node_modules/flickity/css/flickity.css ./dist/flickity.css",
    "build:flickity-js": "cp node_modules/flickity/dist/flickity.pkgd.min.js ./dist/flickity.pkgd.min.js",
    "build:flatpickr-css": "cp node_modules/flatpickr/dist/flatpickr.min.css ./dist/flatpickr.min.css",
    "build:flatpickr-js": "cp node_modules/flatpickr/dist/flatpickr.min.js ./dist/flatpickr.min.js",
    "build:photoswipe-css": "cp node_modules/photoswipe/dist/photoswipe.css ./dist/photoswipe.css",
    "watch:css": "tailwindcss -i ./src/css/style.css -o ./dist/style.css --watch",
    "watch:js": "esbuild ./src/js/main.js --bundle --format=iife --global-name=MainTheme --outfile=./dist/script.js --watch --platform=browser",
    "build:editor": "esbuild ./src/js/editor/template-selector.js --bundle --format=iife --outfile=./dist/template-selector.js --minify --platform=browser --external:@wordpress/*",
    "watch:editor": "esbuild ./src/js/editor/template-selector.js --bundle --format=iife --outfile=./dist/template-selector.js --watch --platform=browser --external:@wordpress/*"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "gutenberg"
  ],
  "author": "",
  "license": "GPL-2.0-or-later",
  "dependencies": {
    "flatpickr": "^4.6.13",
    "flickity": "^2.3.0",
    "lucide": "^0.555.0",
    "photoswipe": "^5.4.4"
  },
  "devDependencies": {
    "@savvywombat/tailwindcss-grid-areas": "^4.0.0",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.0",
    "postcss": "^8.4.32",
    "tailwind-scrollbar-hide": "^4.0.0",
    "tailwindcss": "^3.4.0"
  }
}
